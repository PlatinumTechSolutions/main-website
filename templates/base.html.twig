<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="{% block meta_description %}Platinum Tech Solutions{% endblock %}" />
    <meta name="keywords" content="{% block meta_keywords %}PHP, Symfony, ElasticSearch, AWS, Security Consultants{% endblock %}" />
    <meta name="author" content="{% block meta_author %}Platinum Tech Solutions Limited{% endblock %}" />

    <title>{% block title %}Platinum Tech Solutions{% endblock %}</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Style -->
    <link href="/css/style.css" rel="stylesheet" />

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded fixed-top">
      Platinum Tech Solutions
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
          </li>
        </ul>
      </div>
    </nav>

{% block body %}{% endblock %}

    <section class="footer-cta">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <h3 class="align-middle">Want to discuss a project or say hello?</h3>
          </div>
          <div class="col-lg-4">
            <h3 class="align-middle"><a href="{{ path('contact') }}" class="btn btn-lg btn-info">contact us</a></h3>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 left-column">
            <h3>Contact Us</h3>
            <h4>Telephone</h4>
            <p><a href="tel:+447905323168">+44 (0) 7905 323 168</a></p>
            <h4>Address</h4>
            <p>10 Belgrave Close,<br>Rayleigh,<br>Essex, SS6 9GD</p>
          </div>
          <div class="col-lg-8 right-column">
            <div class="row">
              <div class="col-lg-4 products-column">
                <nav>
                  <h4>Projects</h4>
                  <ul class="menu">
                    <li><a href="#">AWS</a></li>
                    <li><a href="#">ElasticSearch</a></li>
                    <li><a href="#">Symfony</a></li>
                  </ul>
                </nav>
              </div>
              <div class="col-lg-4 services-column">
                <nav>
                  <h4>Services</h4>
                  <ul class="menu">
                    <li><a href="#">DevOps</a></li>
                    <li><a href="#">AAA</a></li>
                    <li><a href="#">BBB</a></li>
                    <li><a href="#">CCC</a></li>
                  </ul>
                </nav>
              </div>
              <div class="col-lg-4 about-column">
                <nav>
                  <h4>About</h4>
                  <ul class="menu">
                    <li><a href="#">About</a></li>
                    <li><a href="#">News</a></li>
                    <li><a href="#">Events</a></li>
                    <li><a href="#">Careers</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <div class="copyright">
      <div class="container">
        <div class="row">
          <div class="col">
            Copyright &copy; 2015-{{ "now"|date("Y") }} Platinum Tech Solutions Limited.
            <a href="#">Privacy Policy</a>
          </div>
        </div>
      </div>
    </div>


    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112067714-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-112067714-1');
    </script>

    {% block javascripts %}{% endblock %}

  </body>
</html>
