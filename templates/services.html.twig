{% extends 'base.html.twig' %}

{% block bodyHeaderText %}Services{% endblock %}

{% block body %}

<section class="content">
  <div class="container services service-list">
    <div class="row">
      {% for service in services %}
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ service.name }}</h5>
            <div class="text-center">
              <img src="/img/projects/{{ service.logo }}" style="width: 200px;" />
            </div>
            <p class="card-text">{{ service.desc }}</p>
            <a href="{{ path(service.route) }}" class="btn btn-primary">More...</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}
